<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width initial-scale=1">
    <title>
        Approve Pembayaran
    </title>
    <link rel="stylesheet" href="/style/style.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
</head>


<body>
    <div class="topbar">
        <h1>Perum Sugan Rame</h1>
    </div>
    <div class="nav">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/approve-pembayaran">Approve Pembayaran</a></li>
            <li><a href="/kelola-keuangan">Kelola Keuangan</a></li>
            <li><a href="/buat-akun">Buat Akun</a></li>
            <li><a href="/input-perintah">Buat Perintah</a></li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">
                    <p>Hallo, <%= userName %>
                    </p>
                    <i class="bi bi-person-circle icon-user-nav"></i>
                </a>
                <div class="dropdown-content">
                    <a href="<%= url %>profile">Profile</a>
                    <a href="<%= url %>login/logout">Logout</a>
                </div>
            </li>
        </ul>
    </div>
    
    <div class="container">
        <div class="header-approve">
            <h4>Approve Pembayaran</h4> <h4>Tahun 2022</h4>
            <% pembayaran.forEach(item => { %>
             <div class="approve-pembayaran">
                <h4><%= item.judul_approve %> </h4>
                <br>
                <h2><%= item.ket_approve %> </h2>
                <% if (item.status_approve == true) { %>
                    <button class="lunas">Approved</button>
                <% }  else { %>
                    <button onclick="location.href = '/done-approve/<%= item.id_approve %>'" class="belum-lunas">Approve</button>
                <% } %>
            </div>
            <% }) %>
        </div>    
</body>

</html>