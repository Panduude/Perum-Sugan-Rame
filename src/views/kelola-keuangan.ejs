<body>
    <div class="topbar">
        <h1>Perum Sugan Rame</h1>
    </div>
    <div class="nav">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/approve-pembayaran">Approve Pembayaran</a></li>
            <li><a href="/kelola-keuangan">Kelola Keuangan</a></li>
            <li><a href="/buat-akun">Buat Akun</a></li>
            <li><a href="/input-perintah">Buat Perintah</a></li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">
                    <p>Hallo, <%= userName %>
                    </p>
                    <i class="bi bi-person-circle icon-user-nav"></i>
                </a>
                <div class="dropdown-content">
                    <a href="<%= url %>profile">Profile</a>
                    <a href="<%= url %>login/logout">Logout</a>
                </div>
            </li>
        </ul>
    </div>

    <div class="container-kk">
        <h4>Laporan Keuangan Perum Sugan Rame</h4>
    <div class="container1">
        <div class="heading">
            <div class="board">No.</div>
            <div class="board">Tanggal</div>
            <div class="board">Keterangan</div>
            <div class="board">Pemasukan</div>
            <div class="board">Pengeluaran</div>
        </div>
        <% keuangan.forEach(item => { %> 
        <div class="table-row">
            <div class="board"><%= item.id_keuangan %></div>
            <div class="board"><%= item.tanggal %></div>
            <div class="board"><%= item.keterangan %></div>
            <div class="board"><%= item.pemasukan %></div>
            <div class="board"><%= item.pengeluaran %></div>
        </div>
        <% }) %>
    </div>
    </div>
</body>
</html>