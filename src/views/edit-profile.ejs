<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta value="viewport" content="width=device-width initial-scale=1">
    <title>
        Profile
    </title>
    <link rel="stylesheet" type="text/css" href="/style/style.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
</head>


<body>
    <div class="topbar">
        <h1>Perum Sugan Rame</h1>
    </div>
    <div class="nav">
        <ul>
            <% if (role=='admin' ) { %>
                <li><a href="/index-admin">Home</a></li>
                <li><a href="/approve-pembayaran">Approve Pembayaran</a></li>
                <li><a href="/kelola-keuangan">Kelola Keuangan</a></li>
                <li><a href="/buat-akun">Buat Akun</a></li>
                <li><a href="/input-perintah">Buat Perintah</a></li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">
                        <p>Hallo, <%= userName %>
                        </p>
                        <i class="bi bi-person-circle icon-user-nav"></i>
                    </a>
                    <div class="dropdown-content">
                        <a href="<%= url %>profile">Profile</a>
                        <a href="<%= url %>/logout">Logout</a>
                    </div>
                </li>
                </li>
                <% } else { %>
                    <li><a href="/index-warga">Home</a></li>
                    <li><a href="/kelola-pembayaran">Pembayaran</a></li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">
                            <p>Hallo, <%= userName %>
                            </p>
                            <i class="bi bi-person-circle icon-user-nav"></i>
                        </a>
                        <div class="dropdown-content">
                            <a href="<%= url %>profile">Profile</a>
                            <a href="<%= url %>login/logout">Logout</a>
                        </div>
                        <% } %>
        </ul>
    </div>
    <div class="container">
        <div class="container-profile">
            <div class="header-profile">
                <h2>Profile</h2>
                <div class="user-img">
                    <img src="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-Vector-PNG-Photo.png" alt="">
                </div>
            </div>
            <form class="form-datadiri" action="/edit-profile-done" method="POST">
                <div class="row">
                    <div class="col-25">
                        <label for="">Nama</label>
                    </div>
                    <div class="col-75">
                        <input type="text" name="nama" value="<%= nama %> ">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="">Tempat, Tanggal Lahir</label>
                    </div>
                    <div class="col-75">
                        <input  type="text" name="ttl" value="<%= ttl %> " placeholder="Serang, 16 Desember 2000">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="">No. Identitas/KTP</label>
                    </div>
                    <div class="col-75">
                        <input  type="text" name="ktp" value="<%= noktp %> " placeholder="398719283746">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="">No. Telepon</label>
                    </div>
                    <div class="col-75">
                        <input  type="text" name="tlp" value="<%= notlp %> " placeholder="0812383849">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="">No. Rumah</label>
                    </div>
                    <div class="col-75">
                        <input  type="text" name="rmh" value="<%= normh %> " placeholder="Blok C No.31">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="">Pekerjaan</label>
                    </div>
                    <div class="col-75">
                        <input  type="text" name="pekerjaan" value="<%= pekerjaan %> " placeholder="Mahasiswa">
                    </div>
                </div>
                <button class="btn-bayar">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>