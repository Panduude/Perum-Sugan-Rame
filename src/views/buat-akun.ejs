</head>


<body>
    <div class="topbar">
        <h1>Perum Sugan Rame</h1>
    </div>
    <div class="nav">
        <ul>
            <li><a href="">Home</a></li>
            <li><a href="/approve-pembayaran">Approve Pembayaran</a></li>
            <li><a href="/kelola-keuangan">Kelola Keuangan</a></li>
            <li><a href="/buat-akun">Buat Akun</a></li>
            <li><a href="/input-perintah">Buat Perintah</a></li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">
                    <p>Hallo, <%= userName %>
                    </p>
                    <i class="bi bi-person-circle icon-user-nav"></i>
                </a>
                <div class="dropdown-content">
                    <a href="<%= url %>profile">Profile</a>
                    <a href="<%= url %>login/logout">Logout</a>
                </div>
            </li>
        </ul>
    </div>
    <div class="container-2">
        <div class="container-buat-akun">
            <h4>Buat Akun</h4>
            <form action="/simpan-akun" method="POST" >
                <div class="row">
                    <div class="col-25">
                        <label  for="username">Username</label>
                    </div>
                    <div class="col-75">
                        <input name="username" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="password">Password</label>
                    </div>
                    <div class="col-75">
                        <input name="password" type="password">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="email">Email</label>
                    </div>
                    <div class="col-75">
                        <input name="email" type="email">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="role">Role</label>
                    </div>
                    <div class="col-75">
                        <input name="role" type="text">
                    </div>
                </div>
                <button class="btn-bayar">Submit</button>
            </form>
        </div>
    </div>
    
    
</body>

</html>