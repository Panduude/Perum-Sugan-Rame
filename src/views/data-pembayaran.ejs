

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width initial-scale=1">
    <title>
        Home
    </title>
    <link rel="stylesheet" href="/style/style.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
</head>


<body>
    <div class="topbar">
        <h1>Perum Sugan Rame</h1>
    </div>
    <div class="nav">
        <ul>
            <% if (role=='admin' ) { %>
                <li><a href="/index-admin">Home</a></li>
                <li><a href="/approve_pembayaran">Approve Pembayaran</a></li>
                <li><a href="/kelola_keuangan">Kelola Keuangan</a></li>
                <li><a href="/buat_akun">Buat Akun</a></li>
                <li><a href="/input_perintah">Buat Perintah</a></li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">
                        <p>Hallo, <%= userName %>
                        </p>
                        <i class="bi bi-person-circle icon-user-nav"></i>
                    </a>
                    <div class="dropdown-content">
                        <a href="<%= url %>profile">Profile</a>
                        <a href="<%= url %>login/logout">Logout</a>
                    </div>
                </li>
                </li>
                <% } else { %>
                    <li><a href="/index-warga">Home</a></li>
                    <li><a href="/kelola-pembayaran">Pembayaran</a></li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">
                            <p>Hallo, <%= userName %>
                            </p>
                            <i class="bi bi-person-circle icon-user-nav"></i>
                        </a>
                        <div class="dropdown-content">
                            <a href="/profile_warga">Profile</a>
                            <a href="/login">Logout</a>
                        </div>
                        <% } %>
        </ul>
    </div>
    <div class="container">
        <div class="header-subpembayaran">
            <h4>Pembayaran <%= jenisPembayaran %>
            </h4>
            <h4>Tahun 2022</h4>

                <% data.forEach(item => { %>
                    <div class="card-pembayaran">
                        <h4>Bulan <%= item.waktu %> </h4>
                        <% if (item.status_pembayaran==true) { %>
                            <button class="lunas">Sudah Bayar</button>
                            <% } else { %>
                                <button onclick="location.href='/proses-pembayaran/<%= item.id_pembayaran %>'" class="belum-lunas">Bayar</button>
                                <% } %>
                    </div>
                <% }) %>
                  
        </div>
    </div>
</body>

</html>